<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/no_product" />

        <TextView
            android:id="@+id/textView_cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/imageView3"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_cart_product_id"
            android:layout_width="98dp"
            android:layout_height="16dp"
            android:layout_below="@+id/textView_cart_product_name"
            android:layout_alignStart="@+id/textView_cart_product_name"
            android:layout_alignEnd="@+id/textView_cart_product_name"
            android:layout_marginStart="3dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="-43dp"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_cart_product_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="86dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Requested"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_cart_product_requested"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="9dp"
            android:text="TextView"
            android:textColor="@color/green"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView_cart_product_cancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_close_24dp" />
    </RelativeLayout>

</android.support.design.card.MaterialCardView>