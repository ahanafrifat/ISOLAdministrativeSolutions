<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.proceedIssuance.ProceedIssuanceActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp">

        <ImageView
            android:id="@+id/imageView_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_white_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView_"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Proceed Issuance"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Vendor Name"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/editText_vendor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:inputType="textPersonName"
            android:hint="Vendor name"
            android:background="@drawable/edittext_design_rectangle"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Remarks"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/editText_vendor_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_design_rectangle"
            android:hint="Type text"
            android:minLines="5"
            android:ems="150"
            android:inputType="textMultiLine"
            android:gravity="top"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Add Invoice"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/linearLayout_add_invoice"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/edittext_design_rectangle">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_camera_alt_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Please click here to add photos from gallery"/>

        </LinearLayout>

        <android.support.design.button.MaterialButton
            android:id="@+id/materialButton_proceed_issuance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed Issuance"
            app:icon="@drawable/ic_send_white_24dp"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</ScrollView>

</LinearLayout>